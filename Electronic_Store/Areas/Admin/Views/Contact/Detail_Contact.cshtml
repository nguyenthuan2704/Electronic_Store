
@{
    ViewBag.Title = "Detail_Contact";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
@model Electronic_Store.Models.contact
    <div id="page-wrapper">
        <div class="main-page">
            <div class="forms">
                <div class="row">
                    <h3 class="title1">Detail Contact:</h3>
                    <div class="form-three widget-shadow">
                        @using (Html.BeginForm("Detail_Contact", "Contact", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                        {
                        <div class="form-group">
                            <label for="focusedinput" class="col-sm-2 control-label">Full Name</label>
                            <div class="col-sm-8">
                                @Html.HiddenFor(model => model.fullname, new { @id = "focusedinput", @class = "form-control1" })
                                @Html.DisplayFor(model => model.fullname, new { @id = "focusedinput", @class = "form-control1" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="focusedinput" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-8">
                                @Html.HiddenFor(model => model.email, new { @id = "focusedinput", @class = "form-control1" })
                                @Html.DisplayFor(model => model.email, new { @id = "focusedinput", @class = "form-control1" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="focusedinput" class="col-sm-2 control-label">Content</label>
                            <div class="col-sm-8">
                                @Html.HiddenFor(model => model.content, new { @id = "focusedinput", @class = "form-control1" })
                                @Html.DisplayFor(model => model.content, new { @id = "focusedinput", @class = "form-control1" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="focusedinput" class="col-sm-2 control-label">Date Create</label>
                            <div class="col-sm-8">
                                @Html.HiddenFor(model => model.created_at, new { @id = "focusedinput", @class = "form-control1" })
                                @Html.DisplayFor(model => model.created_at, new { @id = "focusedinput", @class = "form-control1" })
                            </div>
                        </div>
                            @*<div class="form-group has-error">
                                <label for="radio" class="col-sm-2 control-label">Status</label>
                                <div class="col-sm-8">
                                    <div class="radio block"><label>@Html.RadioButtonFor(model => model.status, true) Checked</label></div>
                                    <div class="radio block"><label>@Html.RadioButtonFor(model => model.status, false) Unchecked</label></div>
                                </div>
                            </div>*@
                            <div class="form-group">
                                <button type="submit" class="btn btn-default">Confirm</button>
                                <a href="@Url.Action("Reply_Contact","Contact",new { id = Model.id })" class="btn btn-danger">Reply</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

