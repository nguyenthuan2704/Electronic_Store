
@{
    ViewBag.Title = "Add_User";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
@model Electronic_Store.Models.user
<div id="page-wrapper">
<div class="main-page signup-page">
    <h2 class="title1">Add New User</h2>
    <div class="sign-up-row widget-shadow">
        <h5>Personal Information:</h5>
        @using (Html.BeginForm("Add_User", "User", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <style type="text/css">
                .helpp-block {
                    color: red;
                    font-weight: bold;
                }
            </style>
            <div class="sign-u">
                @Html.TextBoxFor(model => model.fullname, new { @id = "focusedinput", @class = "form-control1", placeholder = "Fullname" })
                <div class="clearfix"><p class="helpp-block" style="color:red;">@Html.ValidationMessageFor(model => model.fullname)</p></div>
            </div>
            <div class="sign-u">
                @Html.TextBoxFor(model => model.email, new { @id = "focusedinput", @class = "form-control1", placeholder = "Email" })
                <div class="clearfix"><p class="helpp-block" style="color:red;">@Html.ValidationMessageFor(model => model.email)</p></div>
            </div>
            <div class="sign-u">
                <div class="sign-up1">
                    <h4>Gender:</h4>
                </div>
                <div class="sign-up2">
                    <label>
                        @Html.RadioButtonFor(model => model.gender, true, new { @checked = "checked" })
                        Male
                    </label>
                    <label>
                        @Html.RadioButtonFor(model => model.gender, false)
                        Female
                    </label>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="sign-u">
                <div class="sign-up1">
                    <h4>Avatar:</h4>
                </div>
                <div class="sign-up2">
                    <label>Upload Images</label>
                    <input type="file" id="exampleInputFile" name="photo">
                </div>
                <div class="clearfix"> </div>
            </div>
            <h6>Login Information :</h6>
            <div class="sign-u">
                @Html.TextBoxFor(model => model.username, new { @id = "focusedinput", @class = "form-control1", placeholder = "Username" })
                <div class="clearfix"><p class="helpp-block" style="color:red;">@Html.ValidationMessageFor(model => model.username)</p></div>
            </div>
            <div class="sign-u">
                @Html.PasswordFor(model => model.password, new { @id = "focusedinput", @class = "form-control1", placeholder = "Password" })
                <div class="clearfix"><p class="helpp-block" style="color:red;">@Html.ValidationMessageFor(model => model.password)</p></div>
            </div>
            <div class="sign-u">
                @Html.PasswordFor(model => model.confirmpassword, new { @id = "focusedinput", @class = "form-control1", placeholder = "Confirm Password" })
                <div class="clearfix"><p class="helpp-block" style="color:red;">@Html.ValidationMessageFor(model => model.confirmpassword)</p></div>
            </div>
            @*<div class="sign-u">
                <input type="password" placeholder="Confirm Password" name="confirm" required="">
            </div>
            <div class="clearfix"> </div>*@
            <div class="sub_home">
                <input type="submit" value="Submit">
                <div class="clearfix"> </div>
            </div>
            @*<div class="registration">
                <a class="" href="">
                    Forget Password?
                </a>
            </div>*@
        }
    </div>
</div>
</div>
