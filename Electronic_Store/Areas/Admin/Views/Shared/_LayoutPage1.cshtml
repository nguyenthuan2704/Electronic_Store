<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

    <!-- Bootstrap Core CSS -->
    <link href="@Url.Content("~/Areas/Admin/Assets/css/bootstrap.css")" rel='stylesheet' type='text/css' />

    <!-- Custom CSS -->
    <link href="@Url.Content("~/Areas/Admin/Assets/css/style.css")" rel='stylesheet' type='text/css' />

    <!-- font-awesome icons CSS -->
    <link href="@Url.Content("~/Areas/Admin/Assets/css/font-awesome.css")" rel="stylesheet">
    <!-- //font-awesome icons CSS-->
    <!-- side nav css file -->
    <link href="@Url.Content("~/Areas/Admin/Assets/css/SidebarNav.min.css")" media='all' rel='stylesheet' type='text/css' />
    <!-- //side nav css file -->
    <!-- js-->
    <script src="@Url.Content("~/Areas/Admin/Assets/js/jquery-1.11.1.min.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/Assets/js/modernizr.custom.js")"></script>
    <!--CKEditor-->
    <script src="@Url.Content("~/Areas/Admin/Assets/ckeditor/ckeditor.js")"></script>
    <!--webfonts-->
    <link href="//fonts.googleapis.com/css?family=PT+Sans:400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,latin-ext" rel="stylesheet">
    <!--//webfonts-->
    <!-- chart -->
    <script src="@Url.Content("~/Areas/Admin/Assets/js/Chart.js")"></script>
    <!-- //chart -->
    <!-- Metis Menu -->
    <script src="@Url.Content("~/Areas/Admin/Assets/js/metisMenu.min.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/Assets/js/custom.js")"></script>
    <link href="@Url.Content("~/Areas/Admin/Assets/css/custom.css")" rel="stylesheet">
    <!--//Metis Menu -->
    <style>
        #chartdiv {
            width: 100%;
            height: 295px;
        }
    </style>
    <!--pie-chart --><!-- index page sales reviews visitors pie chart -->
    <script src="@Url.Content("~/Areas/Admin/Assets/js/pie-chart.js")" type="text/javascript"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#demo-pie-1').pieChart({
                barColor: '#2dde98',
                trackColor: '#eee',
                lineCap: 'round',
                lineWidth: 8,
                onStep: function (from, to, percent) {
                    $(this.element).find('.pie-value').text(Math.round(percent) + '%');
                }
            });

            $('#demo-pie-2').pieChart({
                barColor: '#8e43e7',
                trackColor: '#eee',
                lineCap: 'butt',
                lineWidth: 8,
                onStep: function (from, to, percent) {
                    $(this.element).find('.pie-value').text(Math.round(percent) + '%');
                }
            });

            $('#demo-pie-3').pieChart({
                barColor: '#ffc168',
                trackColor: '#eee',
                lineCap: 'square',
                lineWidth: 8,
                onStep: function (from, to, percent) {
                    $(this.element).find('.pie-value').text(Math.round(percent) + '%');
                }
            });


        });

    </script>
    <!-- //pie-chart --><!-- index page sales reviews visitors pie chart -->
    <!-- requried-jsfiles-for owl -->
    <link href="@Url.Content("~/Areas/Admin/Assets/css/owl.carousel.css")" rel="stylesheet">
    <script src="@Url.Content("~/Areas/Admin/Assets/js/owl.carousel.js")"></script>
    <script>
        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                items: 3,
                lazyLoad: true,
                autoPlay: true,
                pagination: true,
                nav: true,
            });
        });
    </script>
    <!-- //requried-jsfiles-for owl -->
</head>
<body class="cbp-spmenu-push">
    <div class="main-content">
        @Html.Partial("Left_Menu")
        @Html.Partial("Header")
        @RenderBody()
        @Html.Partial("Footer")
    </div>
</body>
</html>
