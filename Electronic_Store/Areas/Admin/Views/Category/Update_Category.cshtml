
@{
    ViewBag.Title = "Update_Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
@model Electronic_Store.Models.category
    <div id="page-wrapper">
        <div class="main-page">
            <div class="forms">
                <div class="row">
                    <h3 class="title1">Update Category:</h3>
                    <div class="form-three widget-shadow">
                        @using (Html.BeginForm("Update_Category", "Category", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                        {
                            <style type="text/css">
                                .helpp-block {
                                    font-weight: bold;
                                }
                            </style>
                            <div class="form-group has-error">
                                <label for="focusedinput" class="col-sm-2 control-label">Category Name</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.name, new { @id = "focusedinput", @class = "form-control1" })
                                </div>
                                <div class="col-sm-2">
                                    <p class="helpp-block" style="color:red;">@Html.ValidationMessageFor(model => model.name)</p>
                                </div>
                            </div>
                            <div class="form-group has-error">
                                <label for="radio" class="col-sm-2 control-label">Status</label>
                                <div class="col-sm-8">
                                    <div class="radio block"><label>@Html.RadioButtonFor(model => model.status, true) Checked</label></div>
                                    <div class="radio block"><label>@Html.RadioButtonFor(model => model.status, false) Unchecked</label></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-default">Save</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

